    <!-- ======= Service Details Section ======= -->
    <section class="service-details">
      <div class="container">

        <form action="/survey" method="post">
            <div class="row mb-3">
                <div class="col">
                  <input type="text" name="name" class="form-control" placeholder="name" aria-label="name">
                </div>
                <div class="col">
                  <input type="email" name="email" class="form-control" placeholder="email" aria-label="email">
                </div>
              </div>
            <div class="row mb-3">
                <div class="col">
                  <input type="number" name="phone" class="form-control" placeholder="Contact no" aria-label="Contact no">
                </div>
                <div class="col">
                  <input type="number" name="age" class="form-control" placeholder="age" aria-label="age">
                </div>
             </div>
             <h5>Have you test Positive for Covid</h5>
             <div class="form-check form-check-inline mb-3">
                <input name="covidePositive" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="yes">
                <label class="form-check-label" for="inlineRadio1">YES</label>
              </div>
              <div class="form-check form-check-inline mb-3">
                <input name="covidePositive" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="no">
                <label class="form-check-label" for="inlineRadio2">NO</label>
              </div> <br>

              <h5>Are you Vaccinated ?</h5>
              <h6> 1st Dose :</h6>
              <div class="form-check form-check-inline mb-3 ">
                 <input name="dose1" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="yes">
                 <label class="form-check-label" for="inlineRadio1">YES</label>
               </div>
               <div class="form-check form-check-inline mb-3">
                 <input name="dose1" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="no">
                 <label class="form-check-label" for="inlineRadio2">NO</label>
               </div>

               <h6> 2nd Dose :</h6>
              <div class="form-check form-check-inline mb-3">
                 <input name="dose2" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="yes">
                 <label class="form-check-label" for="inlineRadio1">YES</label>
               </div>
               <div class="form-check form-check-inline mb-3">
                 <input name="dose2" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="no">
                 <label class="form-check-label" for="inlineRadio2">NO</label>
               </div> <br>
               
               <div class="form-floating mb-3">
                <textarea name="details" class="form-control" placeholder="Any Details you want to give" id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Details</label>
              </div>


            <input type="submit" value="submit">
        </form>

      </div>
    </section><!-- End Service Details Section -->

    <div class="container mt-5">
        <h2>Surveyed Users</h2>
        <% if(survyedUser.length >0){ %>
        <table class="table table-hover mt-5">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
              <th scope="col">Age</th>
              <th scope="col">Positive</th>
              <th scope="col">Dose1</th>
              <th scope="col">Dose2</th>
              <th scope="col">Details</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
            <tbody>
                <%  survyedUser.forEach(function(user){ %>
              <tr>
                <th scope="row"><%= user.name %></th>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td><%= user.age %></td>
                <td><%= user.test %></td>
                <td><%= user.Dose1 %></td>
                <td><%= user.Dose2 %></td>
                <td><%= user.details %></td>
                <td><a href="/edit/<%= user._id %>">Edit</a></td>
                <td><a href="/delete/<%= user._id %>">Delete</a></td>
              </tr>
              <%  }) %>
            </tbody>
          </table>
          <% }else{ %>
             <h4> No people survyed till now !</h4>
         <% } %>

