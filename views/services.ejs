  <script type="text/javascript">
    function myFunction(){
      div1 = document.getElementById('theDIV1');
      div2 = document.getElementById('theDIV2');
      div3 = document.getElementById('theDIV3');
      div4 = document.getElementById('theDIV4');
      
      if (document.getElementById('covidePositive').checked) {
        x = document.getElementById('covidePositive').value;
      }else if(document.getElementById('covidePositive2').checked){
        x = document.getElementById('covidePositive2').value;
      }
      if (x === "Yes") {
        div1.style.display = "block";
        div2.style.display = "block";
        div3.style.display = "block";
        div4.style.display = "block";
        
      } else if(x === "No"){
        div1.style.display = "none";
        div2.style.display = "none";
        div3.style.display = "none";
        div4.style.display = "none";
      }
    }   
  </script>
